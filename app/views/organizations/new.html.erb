<div class="page-title">
    <h3>CREATE A NEW ORGANIZATION</h3>
</div>

<%= bootstrap_form_for @organization, url: organizations_path, multipart: true, remote: true, layout: :vertical do |f| %>

	<%if f.object.errors.any?%>
		<div class="alert alert-danger alert-dismissible" style="margin-top:5px;" role="alert">
  		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  		<strong>Please fix the following fields:</strong>
  		<ul>
	        <%f.object.errors.full_messages.each do |message| %>
	            <li><%= message %></li>
	        <% end %>
        </ul> 
	</div>
	<%end%>
	
	<div class= "row">
		<div class="col-sm-4">
			<%= f.text_field :name, label: "Organization Name"%>
			<%= f.text_field :email%>
		</div>
	</div>
	
	

	<%= f.submit "CREATE ORGANIZATION", :class => 'btn btn-primary'%>
	<br>
<%end%>