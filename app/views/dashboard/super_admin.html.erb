	<table class="table table-striped">
		<thead>
			<th>Name</th>
			<th>Email</th>
			<th></th>
		</thead>
		<tbody>
			<% @organizations.each do |organization| %>
			<tr>
				<td><%= organization.name %></td>
				<td><%= organization.email %></td>
				<td>
					<%= link_to "Activate", activate_organization_dashboard_index_path(:id => organization.id) %>
					&nbsp;&#8226;&nbsp;
					<%= link_to "Reject", reject_organization_dashboard_index_path(:id => organization.id) %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	
</div>
<div role="tabpanel" class="tab-pane" id="activity">...</div>
<div role="tabpanel" class="tab-pane" id="account">...</div>
</div>